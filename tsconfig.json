    //   "utils/*": [
    //     "utils/*"
    //   ],
    //   "styles/*": [
    //     "styles/*"
    //   ]
    // }
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ],
